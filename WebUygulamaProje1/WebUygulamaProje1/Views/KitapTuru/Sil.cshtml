@model KitapTuru

<form method="post">


	<div class="border p-3 mt-5">

		<div class="row pb-3">
			@*row divin yüksekliği*@

			<h2> Kitap Türü Sil</h2> <hr />
		</div>


	</div>

	<div class="mb-3">
		<label asp-for="Ad" class="p-0"></label>
		<input asp-for="Ad" disabled class="form-control" /> @* disabled özelliği kullanıcı ad kısmına birşey yazamaz.*@
		

	</div>

	<button type="submit" class="btn btn-lg btn-primary" style="width:250px">Kitap Türünü Sil</button>
	<a asp-controller="KitapTuru" asp-action="Index" class="btn btn-lg btn-primary" type="button">
		Kitap Türlerine Geri Dön
	</a>

</form>

